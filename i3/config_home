# assign workspaces to screen
workspace $tag1 output DVI-1
workspace $tag2 output DVI-1
workspace $tag3 output DVI-1
workspace $tag4 output DVI-1
workspace $tag5 output DVI-1
workspace $tag6 output HDMI-0
workspace $tag7 output HDMI-0
workspace $tag8 output HDMI-0
workspace $tag9 output HDMI-0
workspace $tag0 output HDMI-0

workspace $tagF1 output DVI-1
workspace $tagF2 output DVI-1
workspace $tagF3 output DVI-1
workspace $tagF4 output DVI-1
workspace $tagF5 output DVI-1
workspace $tagF6 output HDMI-0
workspace $tagF7 output HDMI-0
workspace $tagF8 output HDMI-0
workspace $tagF9 output HDMI-0
workspace $tagF10 output HDMI-0

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        colors {
          # whole color settings
          background  #000000
          statusline  #ffffff
          separator   #666666

          # Type              border  background  font
          focused_workspace   #008fff #007fff     #ffffff
          active_workspace    #333333 #5f676a     #ffffff
          inactive_workspace  #333333 #222222     #888888
          urgent_workspace    #aa0000 #990000     #ffffff
        }

        font pango:DejaVu Sans Mono, Icons 8

        # i3bar position
        position                top
        # mode                  dock/...
        # workspace_buttons     yes/no
        tray_output             primary
        # Using custom i3status.conf with py3status
        status_command          py3status -c ~/.i3/bar/i3status_home.conf -i ~/.i3/py3status
}
